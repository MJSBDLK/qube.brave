generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  ingredients String[]
  steps       String[]
  tags        String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Brand {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  data      Json     // For flexible spreadsheet-like data
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

